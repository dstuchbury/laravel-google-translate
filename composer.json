{
    "name": "dstuchbury/laravel-google-translate",
    "description": "Laravel package for the Google Translate API",
    "keywords": [
        "laravel",
        "package",
        "google",
        "translate",
        "google translate",
        "api"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Harish Toshniwal",
            "homepage": "https://github.com/DStuchbury/laravel-google-translate",
            "role": "original package creator"
        },
        {
            "name": "Dan Stuchbury",
            "email": "dan@danstuchbury.com",
            "homepage": "https://danstuchbury.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "DStuchbury\\GoogleTranslate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DStuchbury\\GoogleTranslate\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.0",
        "google/cloud-translate": "^1.2",
        "illuminate/support": "9.*"
    },
    "require-dev": {
        "mockery/mockery": "^1.1",
        "orchestra/testbench" : "7.*",
        "phpunit/phpunit": "^9.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "DStuchbury\\GoogleTranslate\\GoogleTranslateServiceProvider"
            ],
            "aliases":{
                "GoogleTranslate": "DStuchbury\\GoogleTranslate\\GoogleTranslateFacade"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
